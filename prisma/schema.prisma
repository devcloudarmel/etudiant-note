generator client {
		provider = "prisma-client-js"
		previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

// prisma/schema.prisma
datasource db {
    provider    = "mysql"
    url  	    = env("DATABASE_URL")
    relationMode = "prisma"
}

model Etudiant {
    id         String      @id @default(uuid())
    numEt      String      @unique
    nom        String
    note_math  Float
    note_phys  Float

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@fulltext([nom])
}
